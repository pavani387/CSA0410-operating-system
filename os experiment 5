#include <stdio.h>

int main() {
    int n;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int p[n], bt[n], pr[n], wt[n], tat[n];
    int i, j;

    // Input section
    for(i = 0; i < n; i++) {
        p[i] = i + 1;   // Process ID
        printf("Enter burst time for process %d: ", p[i]);
        scanf("%d", &bt[i]);
        printf("Enter priority for process %d: ", p[i]);
        scanf("%d", &pr[i]);   // Higher value = higher priority
    }

    // Sorting by priority (descending)
    for(i = 0; i < n - 1; i++) {
        for(j = i + 1; j < n; j++) {
            if(pr[i] < pr[j]) {
                // Swap priority
                int temp = pr[i];
                pr[i] = pr[j];
                pr[j] = temp;

                // Swap burst time
                temp = bt[i];
                bt[i] = bt[j];
                bt[j] = temp;

                // Swap process ID
                temp = p[i];
                p[i] = p[j];
                p[j] = temp;
            }
        }
    }

    // Waiting time and Turnaround time calculation
    wt[0] = 0;  // First process has no waiting time
    for(i = 1; i < n; i++) {
        wt[i] = wt[i - 1] + bt[i - 1];
    }

    for(i = 0; i < n; i++) {
        tat[i] = wt[i] + bt[i];
    }

    // Output
    printf("\nPriority Scheduling Results:\n");
    printf("P\tBT\tPR\tWT\tTAT\n");
    for(i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\n", p[i], bt[i], pr[i], wt[i], tat[i]);
    }

    return 0;
}
